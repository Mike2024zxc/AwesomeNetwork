@model AwesomeNetwork.ViewModels.Account.EditViewModel;
@{
}

<form class="frm" method="post" asp-controller="AccountManager" asp-action="Update">
    <div asp-validation-summary="ModelOnly"></div>

    <div>
        <div class="mrgn">
            <label asp-for="@Model.UserId"></label>
            <input asp-for="@Model.UserId" class="form-control" placeholder="Введите ID пользователя" />
            <span asp-validation-for="@Model.UserId" class="text-danger"></span>
        </div>
    </div>

    <div>
        <div class="mrgn">
            <label asp-for="@Model.FirstName"></label>
            <input asp-for="@Model.FirstName" class="form-control" placeholder="Введите имя" />
            <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
        </div>
    </div>

    <div>
        <div class="mrgn">
            <label asp-for="@Model.LastName"></label>
            <input asp-for="@Model.LastName" class="form-control" placeholder="Введите фамилию" />
            <span asp-validation-for="@Model.LastName" class="text-danger"></span>
        </div>
    </div>

    <div class="mrgn center">
        <label asp-for="@Model.DateBirth"></label>
        <input asp-for="@Model.DateBirth" class="form-control" placeholder="Выберите дату рождения" type="date" required />
        <span asp-validation-for="@Model.DateBirth" class="text-danger"></span>
    </div>

    <div>
        <div class="mrgn">
            <label asp-for="@Model.Email"></label>
            <input asp-for="@Model.Email" class="form-control" placeholder="Введите email" />
            <span asp-validation-for="@Model.Email" class="text-danger"></span>
        </div>
        <div class="mrgn">
            <label asp-for="@Model.Status"></label>
            <input asp-for="@Model.Status" class="form-control" placeholder="Введите статус" />
            <span asp-validation-for="@Model.Status" class="text-danger"></span>
        </div>
        <div class="mrgn">
            <label asp-for="@Model.About"></label>
            <input asp-for="@Model.About" class="form-control" placeholder="Информация обо мне" />
            <span asp-validation-for="@Model.About" class="text-danger"></span>
        </div>

        <div class="mrgn">
            <label asp-for="@Model.UserName"></label>
            <input asp-for="@Model.UserName" class="form-control" placeholder="Введите имя пользователя" />
            <span asp-validation-for="@Model.UserName" class="text-danger"></span>
        </div>
    </div>
    <div class="mrgn">
        <input asp-for="Image" class="form-control" />
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>

    <div class="center">
        <input class="btn_submit" type="submit" value="Сохранить" />
    </div>
</form>
